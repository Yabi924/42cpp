NAME=conversion
CFLAG=-Wall -Wextra -Werror -g3 -fsanitize=address

SRCS=main.cpp \
	ScalarConverter.cpp

OBJ=$(SRCS:.cpp=.o)

all: $(NAME)

%.o: %.cpp
	@c++ $(CFLAG) -std=c++98 -c $< -o $@

$(NAME): $(OBJ)
	@c++ $(CFLAG) -std=c++98 -o $(NAME) $(OBJ)

clean:
	@rm -rf $(OBJ)

fclean: clean
	@rm -rf $(NAME)

re: fclean all

char: $(NAME)
	./$(NAME) a
	@echo ---------------------------------- 
	./$(NAME) '*'
	@echo ---------------------------------- 
	./$(NAME) ' '
	@echo ---------------------------------- 
	./$(NAME) aa
	@echo ---------------------------------- 
	./$(NAME) ''

int: $(NAME)
	./$(NAME) 42
	@echo ---------------------------------- 
	./$(NAME) -1
	@echo ---------------------------------- 
	./$(NAME) -123
	@echo ---------------------------------- 
	./$(NAME) +123
	@echo ---------------------------------- 
	./$(NAME) a10
	@echo ---------------------------------- 
	./$(NAME) --10
	@echo ---------------------------------- 
	./$(NAME) ++10
	@echo ---------------------------------- 
	./$(NAME) 10+
	@echo ---------------------------------- 
	./$(NAME) 10-
	@echo ---------------------------------- 
	./$(NAME) 1-1

float: $(NAME) 
	./$(NAME) 10.0f
	@echo ---------------------------------- 
	./$(NAME) -10.1f
	@echo ---------------------------------- 
	./$(NAME) +11.4f
	@echo ---------------------------------- 
	./$(NAME) --11.0f
	@echo ---------------------------------- 
	./$(NAME) -11.f
	@echo ---------------------------------- 
	./$(NAME) ++1.22f
	@echo ---------------------------------- 
	./$(NAME) -11.2a3f
	@echo ---------------------------------- 
	./$(NAME) 11.0ff

double: $(NAME) 
	./$(NAME) 10.0
	@echo ---------------------------------- 
	./$(NAME) -10.1
	@echo ---------------------------------- 
	./$(NAME) +11.4
	@echo ---------------------------------- 
	./$(NAME) --11.0
	@echo ---------------------------------- 
	./$(NAME) -11.
	@echo ---------------------------------- 
	./$(NAME) ++1.22
	@echo ---------------------------------- 
	./$(NAME) -11.2a3

other: $(NAME)
	./$(NAME) nan
	@echo ---------------------------------- 
	./$(NAME) inf
	@echo ---------------------------------- 
	./$(NAME) +inf
	@echo ---------------------------------- 
	./$(NAME) -inf
	@echo ---------------------------------- 
	./$(NAME) inff
	@echo ---------------------------------- 
	./$(NAME) +inff
	@echo ---------------------------------- 
	./$(NAME) -inff
